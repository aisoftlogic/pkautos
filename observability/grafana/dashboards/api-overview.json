{
  "__inputs": [],
  "__requires": [],
  "title": "API Overview",
  "uid": "api-overview",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "API Up",
      "gridPos": { "x": 0, "y": 0, "w": 4, "h": 4 },
      "targets": [ { "expr": "up{job=\"api\"}", "refId": "A" } ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }, "orientation": "auto" }
    },
    {
      "type": "graph", "title": "Requests Rate", "gridPos": { "x": 4, "y": 0, "w": 8, "h": 8 },
      "targets": [ { "expr": "sum(rate(http_requests_total[5m]))", "refId": "A" } ]
    },
    {
      "type": "graph", "title": "Error Rate (5xx)", "gridPos": { "x": 0, "y": 4, "w": 6, "h": 8 },
      "targets": [ { "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m]))", "refId": "A" } ]
    },
    {
      "type": "graph", "title": "p95 Latency", "gridPos": { "x": 6, "y": 4, "w": 6, "h": 8 },
      "targets": [ { "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))", "refId": "A" } ]
    }
  ]
}
