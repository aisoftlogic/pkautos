{
  "name": "pkautos-monorepo",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "format": "prettier --write .",
    "build": "echo build-root-skip",
    "test": "echo no-root-tests",
    "prepare": "command -v husky >/dev/null 2>&1 && husky install || echo 'husky skipped (binary not present)'",
    "prepush:fast": "pnpm --filter @pkautos/api test",
    "lint:ban-pages": "node scripts/check-no-pages.js"
  },
  "devDependencies": {
    "eslint": "^9.12.0",
    "prettier": "^3.4.0",
    "@typescript-eslint/parser": "^8.6.0",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "typescript": "^5.6.2",
    "eslint-config-prettier": "^9.1.0",
    "commitlint": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "husky": "^9.0.11",
    "jest-environment-jsdom": "^29.7.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b"
}
